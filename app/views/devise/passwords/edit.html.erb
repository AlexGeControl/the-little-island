<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <h2>修改密码</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemes' %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="form-group">
        <%= f.label :password, "设置新密码", class:"form-label" %><br />
        <% if @minimum_password_length %>
          <em>(至少<%= @minimum_password_length %>个英文字符)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "请设置您的新密码" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "确认新密码", class:"form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "请再次确认您的新密码" %>
      </div>
    
      <div class="actions">
        <%= f.submit "修改密码", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>